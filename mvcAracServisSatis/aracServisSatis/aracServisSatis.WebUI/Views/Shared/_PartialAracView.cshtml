@model IEnumerable<Arac>
@foreach (var item in Model)
{
    <div class="col mb-5">
        <div class="card h-100">
            <!-- Sale badge-->
            <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div>
            <!-- Product image-->
            <img class="card-img-top" src="/Img/Cars/@item.Resim1" alt="...">
            <!-- Product details-->
            <div class="card-body p-4">
                <div class="text-center">
                    <!-- Product name-->
                    <h5 class="fw-bolder">@item.marka.Adi @item.Modeli @item.KasaTipi</h5>
                    <!-- Product price-->
                    <span class="text-muted text-decoration-line-through">$50.00</span>
                    @item.Fiyati ₺
                </div>
            </div>
            <!-- Product actions-->
            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                <div class="text-center">
                    <a class="btn btn-outline-dark mt-auto" href="/Arac/Index/@item.Id">İncele</a>
                    <form action="/Favorites/Add" method="post">
                        <input type="hidden" name="aracId" value="@item.Id" />
                        <button type="submit" class="btn btn-outline-primary">Favoriye Ekle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
