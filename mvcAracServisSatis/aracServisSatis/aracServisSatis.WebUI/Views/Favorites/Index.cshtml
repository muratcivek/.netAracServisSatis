@model IEnumerable<Arac>
@{
    ViewData["Title"] = "Favorilerim";
}

<h1>Favorilerim</h1>

@if(Model is not null && Model.Count() > 0)
{
    <table class="table table-hover table-striped">
        <tr>
            <th>Araç</th>
            <th>Resim</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a class="nav-link text-dark" href="/Arac/Index/@item.Id">
                    @item.marka.Adi @item.Modeli
                    </a>
                </td>
                <td>
                    
                       <img src="/Img/Cars/@item.Resim1" alt="@item.Modeli" height="44" />
                    
                </td>
                <td>
                    <form action="/Favorites/Remove" method="post">
                        <input type="hidden" name="aracId" value="@item.Id" />
                        <button type="submit" class="btn btn-danger">X</button>
                    </form>
                </td>             
            </tr>
        }
    </table>
}
else
{
    <div class="alert alert-warning">
        <h3> Favorilerinizde henüz araç bulunmamaktadır. </h3>
    </div>
}



